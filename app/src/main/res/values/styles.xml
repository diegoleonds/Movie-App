<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/rating_stars</item>
        <item name="colorControlActivated">@color/rating_stars</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.MovieTitle" parent="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SecondaryInfo">
        <item name="android:textColor">@color/secondary_txt</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TopMovieTxt">
        <item name="android:textColor">@color/secondary_txt</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MovieDescription">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>